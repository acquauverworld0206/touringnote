<div class="w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold text-gray-800">抽選結果！</h1>
    <p class="text-lg text-gray-600 mt-2">選ばれたのはこちらのスポットです！</p>
  </div>

  <div class="bg-white shadow-md rounded-lg">
    <ul class="divide-y divide-gray-200">
      <% @selected_spots.each do |candidate| %>
        <li class="p-4 flex items-center justify-between gap-4">
          <div class="flex-grow flex items-center space-x-4 min-w-0">
            <%# 画像があれば表示し、なければプレースホルダーを表示 %>
            <% if candidate.spot&.photo&.attached? %>
              <%= image_tag candidate.spot.photo.variant(resize_to_limit: [100, 100]), class: "h-16 w-16 rounded-md object-contain bg-gray-100" %>
            <% else %>
              <div class="h-16 w-16 rounded-md bg-gray-200 flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
              </div>
            <% end %>
            <div class="min-w-0">
              <%= link_to candidate.spot&.name || "（削除されたスポット）", spot_path(candidate.spot), class: "font-semibold text-lg text-gray-900 hover:underline truncate" %>
              <p class="text-sm text-gray-500">追加者: <%= candidate.added_by&.nickname || "（退会したユーザー）" %></p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="mt-8 flex justify-center space-x-4">
    <%= link_to "グループ詳細に戻る", group_path(@group), class: "inline-block bg-gray-500 text-white font-bold py-2 px-4 rounded hover:bg-gray-600" %>
    <%# もう一度抽選するためのフォーム %>
    <%= form_with(url: random_draw_group_path(@group), method: :post, class: "flex items-center space-x-2") do |form| %>
      <%= number_field_tag :count, params[:count] || 1, min: 1, class: "w-20 px-2 py-1 border border-gray-300 rounded-md" %>
      <%= form.submit "もう一度抽選！", class: "inline-block bg-purple-500 text-white font-bold py-2 px-4 rounded hover:bg-purple-600 cursor-pointer" %>
    <% end %>
  </div>
</div>