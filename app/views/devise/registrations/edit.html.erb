<div class="w-full max-w-md mt-24">
  <div class="bg-secondary-gray p-8 rounded-xl shadow-2xl border border-gray-700">
    <h2 class="text-2xl font-bold text-white mb-6 text-center">アカウント編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :nickname, class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.text_field :nickname, autofocus: true, class: "w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-blue" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-blue" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-gray-400">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div>
        <%= f.label :password, "新しいパスワード", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <i class="text-xs text-gray-400">(変更しない場合は空欄のまま)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-blue" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-400"><%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>

      <div>
        <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-blue" %>
      </div>

      <div>
        <%= f.label :current_password, "現在のパスワード", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <i class="text-xs text-gray-400">(変更を確定するには現在のパスワードが必要です)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-blue" %>
      </div>

      <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-medium text-white bg-primary-blue hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-blue focus:ring-offset-secondary-gray">
        更新
      </button>
    <% end %>

    <h3 class="text-lg font-bold text-red-500 mt-10 pt-6 border-t border-gray-700">アカウント削除</h3>
    <p class="text-sm text-gray-400">一度削除すると元に戻せません。</p>
    <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当によろしいですか？", turbo_confirm: "本当によろしいですか？" }, method: :delete, class: "w-full mt-4 flex justify-center py-2 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" %>
  </div>
</div>