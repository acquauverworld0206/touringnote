<div class="w-full max-w-md mt-24">
  <!-- アプリケーションロゴ/タイトル (メインカード用 - 既にヘッダーにあるため非表示または調整可能) -->
  <div class="text-center mb-8 hidden sm:block">
    <h1 class="text-4xl font-extrabold text-white tracking-tight">Route List</h1>
    <p class="text-gray-400 mt-2 text-lg">旅の計画を、もっと簡単に。</p>
  </div>

  <!-- ログインカード -->
  <div class="bg-secondary-gray p-8 rounded-xl shadow-2xl border border-gray-700">
    <h2 class="text-2xl font-bold text-white mb-6 text-center">アカウントを作成</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- ニックネーム入力欄 -->
      <div>
        <%= f.label :nickname, class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.text_field :nickname, autofocus: true, class: "w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-blue", placeholder: "表示名" %>
      </div>

      <!-- メールアドレス入力欄 -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-blue", placeholder: "your.email@example.com" %>
      </div>

      <!-- パスワード入力欄 -->
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-blue", placeholder: "••••••••" %>
      </div>

      <!-- パスワード確認入力欄 -->
      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-blue", placeholder: "••••••••" %>
      </div>

      <!-- ログインボタン -->
      <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-medium text-white bg-primary-blue hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-blue focus:ring-offset-secondary-gray">
        アカウントを作成
      </button>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>